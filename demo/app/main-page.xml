<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded" class="page">
  <StackLayout class="p-20">
    <Label text="nativescript-ibeacon demo"></Label>
    <Button text="Start" tap="{{ start }}"></Button>
    <Button text="Stop" tap="{{ stop }}"></Button>
    <Label text="{{ beaconInRange.id1 }}" horizontalAlignment="center"></Label>
    <Label text="{{ beaconInRange.id2 }}" horizontalAlignment="center"></Label>
    <Label text="{{ beaconInRange.id3 }}" horizontalAlignment="center"></Label>
    <Label text="{{ beaconInRange.distance }}" horizontalAlignment="center"></Label>
    <Label text="{{ beaconInRange.updated }}" horizontalAlignment="center"></Label>
    <Label text="{{ message }}" class="t-20 text-center c-black" textWrap="true"/>
  </StackLayout>
</Page>